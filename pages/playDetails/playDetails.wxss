@import "/static/iconfont/iconfont.wxss";

.playDetailsBox {
  background-color: rgba(0, 0, 0, .3);
  display: flex;
  flex-direction: column;
}

/* 歌词背景 */
.lyricBgBox {
  flex: 1;
  display: flex;
  flex-direction: column;
}


.lyricBgBox .lyrics {
  flex: 1;
  overflow: scroll;
}

.lyricBgBox .lyricsTop,
.lyricBgBox .lyricsBottom {
  height: 80rpx !important;
  background-color: #fff;
}

.lyricBgBox .lyrics .lyricsScroll {
  height: 100%;
  background-color: #075;
  text-align: center;
  font-size: 28rpx;
}

.lyricBgBox .lyrics .bgImage {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.lyricBgBox .lyrics .bgImage .ringBox {
  width: 440rpx;
  height: 440rpx;
  background-color: #2D445B;
  border-radius: 50%;
  position: relative;
}

.lyricBgBox .lyrics .bgImage .ringBox::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-image: url('https://p5.music.126.net/obj/wo3DlcOGw6DClTvDisK1/4602256867/5855/63fb/325b/d7e4e3a244701ee85fecb5d4f6b5bd57.png?imageView=&quality=75&thumbnail=200y200');
  background-size: contain;
  z-index: 9;
}

.lyricBgBox .lyrics .bgImage .ringBox image {
  width: 300rpx;
  height: 300rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
}

/* 歌词单行选中 */
.lyricsActice {
  color: #fff !important;
}

.lyricBgBox .lyrics .lyricsScroll .lyricsItem {
  line-height: 48rpx;
  color: #888;
}

/* 功能按钮 */
.controlBar {
  height: 260rpx;

  /* background-color: #eee; */
}

.controlBar .slider-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.controlBar .slider-box .musicSlider {
  flex: 1;
  margin: 20rpx;
}

.controlBar .slider-box .musicTime {
  font-size: 24rpx;
  color: #888;
}

.controlButton {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.controlButton .iconfont {
  color: #eee;
}

.icon-zanting,
.icon-bofang-wangyiicon {
  font-size: 100rpx;
}

.icon-loopType_0,
.icon-loopType_1,
.icon-loopType_2,
.icon-shangyiqu,
.icon-xiayiqu,
.icon-caidan {
  font-size: 48rpx;
}