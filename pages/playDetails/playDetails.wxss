@import "/static/iconfont/iconfont.wxss";

.playDetailsBox {
  background-color: rgba(0, 0, 0, .3);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.playDetailsBox .playDetailsBoxBgImage {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  filter: blur(22px);
  z-index: -1;
  transform: scale(1.2);
  /* overflow: hidden; */
}

/* 歌词背景 */
.lyricBgBox {
  flex: 1;
  display: flex;
  flex-direction: column;
}


.lyricBgBox .lyrics {
  flex: 1;
  overflow: scroll;
}

.lyricBgBox .lyricsTop,
.lyricBgBox .lyricsBottom {
  height: 80rpx !important;
  background-color: #fff;
}

.lyricBgBox .lyrics .lyricsScroll {
  height: 100%;
  /* background-color: #075; */
  text-align: center;
}

.lyricBgBox .lyrics .bgImage {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  position: relative;
}

.lyricBgBox .lyrics .bgImage .ringBox {
  width: 592rpx;
  height: 592rpx;
  background-color: rgba(0, 0, 0, .1);
  border-radius: 50%;
  position: relative;
}
.playerMenu{
  /* justify-content: flex-end; */
  position: absolute;
  bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.playerMenu .iconfontBox{
  flex: 1;
  text-align: center;
}
.playerMenu .iconfont{
  font-size: 44rpx;
  color: #fff;
  position: relative;
}
.playerMenu .iconfont .comments{
  font-size: 18rpx;
  position: absolute;
  top: -2rpx;
  left: 36rpx;
}
.lyricBgBox .lyrics .bgImage .ringBox::after {
  content: "";
  position: absolute;
  width: 192rpx;
  height: 274rpx;
  top: -140rpx;
  left: 266rpx;
  /* transform: rotate(-20deg); */
  background: url('https://s3.music.126.net/mobile-new/img/needle-ip6.png?be4ebbeb6befadfcae75ce174e7db862=') no-repeat center;
  background-size: contain;
  transform: rotate(-30deg);
  transform-origin: 24rpx 10rpx;
  transition: transform .5s ease;
}
.lyricBgBox .lyrics .bgImage .play.ringBox::after{
  transform: rotate(0deg);
}

.lyricBgBox .lyrics .bgImage .ringBox .playerBox {
  width: 100%;
  height: 100%;
}

.lyricBgBox .lyrics .bgImage .ringBox .playerBox::before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-image: url('https://p5.music.126.net/obj/wo3DlcOGw6DClTvDisK1/4602256867/5855/63fb/325b/d7e4e3a244701ee85fecb5d4f6b5bd57.png?imageView=&quality=75&thumbnail=200y200');
  background-size: contain;
}

.lyricBgBox .lyrics .bgImage .ringBox image {
  width: 368rpx;
  height: 368rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
}

/* 歌词单行选中 */
.lyricsActice {
  color: #fff !important;
}

.lyricBgBox .lyrics .lyricsScroll .lyricsItem {
  line-height: 56rpx;
  color: #bbb;
  font-size: 26rpx;
  font-family: Arial, Helvetica, sans-serif;
}

/* 功能按钮 */
.controlBar {
  height: 260rpx;
  /* background-color: #eee; */
}

.controlBar .slider-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.controlBar .slider-box .musicSlider {
  flex: 1;
  margin: 20rpx;
}

.controlBar .slider-box .musicTime {
  font-size: 24rpx;
  color: #888;
}

.controlButton {
  display: flex;
  /* justify-content: space-around; */
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
}
.controlButton .iconfontBox{
  flex: 1;
  text-align: center;
}
.controlButton .iconfont {
  color: #eee;
}

.icon-zanting,
.icon-bofang-wangyiicon {
  font-size: 100rpx;
}

.icon-loopType_0,
.icon-loopType_1,
.icon-loopType_2,
.icon-shangyiqu,
.icon-xiayiqu,
.icon-caidan {
  font-size: 44rpx;
}