<view class="playDetailsBox" style="height:{{height}}">
	<image class="playDetailsBoxBgImage" src="{{musicDetailsData.al.picUrl}}" mode="aspectFill"></image>
	<view class="lyricBgBox">
		<view class="lyrics" catchtap="clickTest">
			<view wx:if="{{test}}">
				<scroll-view class="lyricsScroll" scroll-y>
					<view wx:for="{{lyricsData}}" wx:key="time" wx:for-item="lyricsItem" class="lyricsItem {{lyricsActiceIndex===index?'lyricsActice':''}}">{{lyricsItem.text}}
					</view>
				</scroll-view>
			</view>
			<view class="bgImage" wx:else>
				<view class="ringBox">
					<!-- <image src="{{musicDetailsData.al.picUrl}}" alt=""> -->
						<image src="{{musicDetailsData.al.picUrl}}"></image>
				</view>
			</view>
		</view>
	</view>
	<view class="controlBar">
		<view class="slider-box">
			<text class="musicTime">{{currentTime}}</text>
			<slider class="musicSlider" bindchange="sliderchange" left-icon="cancel" right-icon="success_no_circle" block-size="12"
				backgroundColor="#bbb" activeColor="#eee" max="{{musicLength}}" value="{{sliderValue}}" step="0.001" />
			<text class="musicTime">{{totalTime}}</text>
		</view>
		<view class="controlButton">
			<text class="iconfont icon-{{playType===0?'loopType_0':(playType===1?'loopType_1':'loopType_2')}}"
				catchtap="loopClick"></text>
			<text class="iconfont icon-shangyiqu" catchtap="onPrev"></text>
			<text class="iconfont icon-{{isPlayOrPause===0?'zanting':'bofang-wangyiicon'}}"
				catchtap="clickPlayOrPause"></text>
			<text class="iconfont icon-xiayiqu" catchtap="onNext"></text>
			<text class="iconfont icon-caidan"></text>
		</view>
	</view>
	<!-- <view class="swiperMenu"></view> -->
</view>
