/* pages/index/index.wxss */
.indexContainer {}
.navContainer{
    height: 160rpx;
    margin-top: 30rpx;
    padding-left: 10rpx;
}
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 5个图标导航区域 */
.navContainer {
    display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80rpx;
    /* height: 120rpx; */
    /* width: 20%; */
}

.navItem .iconBackground {
    width: 80rpx;
    height: 80rpx;
    background-color: rgb(255, 25, 0);
    border-radius: 50%;
}
.navItem .iconName {
    height: 40rpx;
    line-height: 40rpx;
    margin: 10rpx 0;
    font-size: 26rpx;
    color: #555;
    font-family: Arial, Helvetica, sans-serif;
}

.navItem .iconBackground image {
    width: 100%;
    height: 100%;
}

.navItem .iconfont {
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 50%;
    background-color: rgb(255, 25, 0);
    font-size: 36rpx;
    color: #fff;
    /* margin: 40rpx 0; */
}

