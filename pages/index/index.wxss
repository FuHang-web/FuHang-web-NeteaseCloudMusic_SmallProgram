/* pages/index/index.wxss */
.indexContainer {}

.navContainer {
    height: 160rpx;
    margin-top: 30rpx;
    padding-left: 15rpx;
}

.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 5个图标导航区域 */
.navContainer {
    display: flex;
}

.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 80rpx;
    /* height: 120rpx; */
    /* width: 20%; */
}

.navItem .iconBackground {
    width: 90rpx;
    height: 90rpx;
    background-color: rgb(255, 55, 25);
    border-radius: 50%;
    position: relative;
}

.navItem .iconBackground image {
    width: 100%;
    height: 100%;
}

.navItem .iconBackground .monthDay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 18rpx;
    padding-top: 7rpx;
    color: rgb(255, 55, 25);
}

.navItem .iconName {
    height: 40rpx;
    line-height: 40rpx;
    margin: 10rpx 0;
    font-size: 26rpx;
    color: #666;
    font-family: Arial, Helvetica, sans-serif;
}



.navItem .iconfont {
    width: 90rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-radius: 50%;
    background-color: rgb(255, 55, 25);
    font-size: 36rpx;
    color: #fff;
    /* margin: 40rpx 0; */
}

