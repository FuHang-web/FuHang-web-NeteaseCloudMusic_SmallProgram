} */

/* 发现好歌单 */
.recommendContainer {
    /* padding: 28rpx; */
}

/* 发现好歌单 内容区域 */
.recommendContent {
    padding-left: 30rpx;
}

.recommendScroll {
    display: flex;
    margin-top: 20rpx;
    height: 300rpx;
}

.recommendScroll .scrollItem {
    width: 200rpx;
    position: relative;
}

.recommendScroll .scrollItem:not(:last-child) {
    margin-right: 20rpx;
}

.recommendScroll .scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.recommendScroll .scrollItem .playIconBox {
    display: flex;
    align-items: center;
    font-size: 20rpx;
    position: absolute;
    top: 0;
    right: 10rpx;
    color: #fff;
}

.recommendScroll .scrollItem .playIconBox .icon-bofang {
    font-size: 20rpx;
    margin-right: 10rpx;
}

.recommendScroll .scrollItem .scrollItemName {
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

/* 音乐日历 */
.musicCalendar {
    margin: 20rpx 30rpx;
    /* height: 200rpx; */
    box-shadow: 0 2px 6px 0 rgba(0, 0, 0, .2);
    padding-top: 10rpx;
    border-radius: 16rpx;
}

.musicCalendar .icon-yinlerili {
    margin-left: 20rpx;
    color: rgb(255, 55, 25);
    font-size: 30rpx;
}

.musicCalendar .icon-yinlerili::before {
    margin-right: 10rpx;
}

.musicCalendar .musicCalendarListBox {
    display: flex;
    align-items: center;
    padding: 30rpx 20rpx;
    justify-content: space-between;
}

.musicCalendar .musicCalendarListBox .musicCalendarListBox-left {
    display: flex;
    flex-direction: column;
    font-size: 25rpx;
}

.musicCalendar .musicCalendarListBox .musicCalendarListBox-left .dayName {
    font-weight: bold;
    padding-bottom: 10rpx;
}

.musicCalendar .musicCalendarListBox .musicCalendarListBox-left .dayWorks {
    color: #666;
}

.musicCalendar .musicCalendarListBox .musicCalendarListBox-right {
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
    overflow: hidden;
}

.musicCalendar .musicCalendarListBox .musicCalendarListBox-right image {
    width: 100%;
    height: 100%;
}

/* 排行榜 */
.topList {
    /* padding: 20rpx; */
}

.topListSwiperBox {
    padding-left: 30rpx;
}

.topList .topListSwiper {
    height: 434rpx;
    width: 100%;
    /* border-radius: 18rpx; */
}

.swiperItem {
    width: 96%;
    background-color: rgba(0, 0, 0, .6);
    padding: 0 30rpx;
    box-sizing: border-box;
    border-radius: 18rpx;
    height: 100%;
    position: relative;
    overflow: hidden;
}

.swiperItem .swiperItemBg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: .6;
    z-index: -1;
    transform: scale(1.2);
}

.swiperItem .title {
    font-size: 34rpx;
    padding: 30rpx 0;
    color: #fff;
}

.swiperItem .musicItem {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.swiperItem .musicItem image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 10rpx;
}

.swiperItem .musicItem .count {
    width: 80rpx;
    text-align: center;
    color: #fff;
    height: auto;
    font-size: 28rpx;
}

.swiperItem .musicItem .names {
    width: 360rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: #888;
    font-family: Arial, Helvetica, sans-serif;
}

.swiperItem .musicItem .names .musicName {
    color: #fff;
}

.swiperItem .musicItem .names .authorName {
    font-size: 23rpx;
}

.swiperItem .musicItem .iconFont {
    color: #fff;
    font-size: 20rpx;
    margin-left: auto;
}